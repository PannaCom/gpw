@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li>
        @Html.ActionLink("Chào thành viên " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="/Account/LogOff">Đăng xuất</a></li>
}
else
{
    <li>@Html.ActionLink("Đăng ký thành viên", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Đăng nhập thành viên", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
