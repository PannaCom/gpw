@model gpw.Models.news


@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (Model != null)
    {
        ViewBag.title += @Model.new_title;
    }    
}

@if (Model != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>@Model.new_title</h1>
            </div>

            <p>Ngày tạo: <i>@Model.ngay_tao</i></p>

            <div class="content_baiviet">
                @Html.Raw(@Model.new_content)
            </div>
        </div>
    </div>
}