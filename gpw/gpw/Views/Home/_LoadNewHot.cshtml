@model List<gpw.Models.news>

<div class="newshot">
    <!--Our Agent Warp Start-->
    <section class="kf_our_agent_bg">
        <div class="container">
            <!--Heading Wrap Start-->
            <div class="kf_heading_1">
                <h3>Tin tức nổi bật</h3>
            </div>
            <!--Heading Wrap End-->
            <!--Agent List Wrap Start-->
            <div class="kf_agent_slider owl-carousel owl-theme">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        string link_pro = string.Format("/News/Details/{0}", item.id);
                        <div class="item">
                            <div class="kf_agent_wrap">
                                <figure>
                                    <img src="@item.new_img" alt="@item.new_title">
                                    <figcaption>
                                        <span class="kf_listing_overlay"></span>
                                    </figcaption>
                                </figure>
                                <div class="kf_agent_des">
                                    <h6><a href="@link_pro">@item.new_title</a></h6>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
            <!--Agent List Wrap End-->

        </div>
    </section>
    <!--Our Agent Warp End-->
</div>
